<div class="container p-5">
  <div class="row justify-content-center"> <!-- Center the content -->
    <!-- changed to col-sm-6 to make it smaller and centered -->
    <div class="col-xs-12 col-sm-6">
      <h2 class="session-manager-header">Welcome back, little human!</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-flex justify-content-center mt-2">
          <%= f.button :submit, "Log in", class: "btn button--primary w-100", style: "color: white !important;", data: { turbo: false } %>
        </div>
      <% end %>
          <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
