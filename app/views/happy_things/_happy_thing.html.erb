<%= turbo_frame_tag happy_thing do %>

  <div class="happy_thing shadow">
    <%= link_to happy_thing.title, happy_thing_path(happy_thing) %>
    <div class="happy_thing__actions">
      <%= button_to "X",
                    happy_thing_path(happy_thing),
                    method: :delete,
                    data: { turbo_frame: "happy_things_frame_after_create"},
                    class: "btn btn--light" %>
        <%= link_to "Edit", edit_happy_thing_path(happy_thing), class: "btn btn--light edit-link" %>

    </div>
  </div>

<% end %>
