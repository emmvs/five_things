<div class="container">
  <%= link_to sanitize("&larr;"), root_path, class: "btn btn-blue m-4" %>

  <div class="header">
    <h1>Add an old happy thing</h1>
  </div>

  <%= simple_form_for @old_happy_thing, url: old_happy_thing_path do |f| %>
    <%= f.input :title, label: 'Title' %>
    <%= f.input :start_time %>
    <%= f.button :submit, 'Save' %>
  <% end %>
</div>
