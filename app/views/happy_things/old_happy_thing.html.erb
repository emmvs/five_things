<div class="container mt-5">
  <%= link_to sanitize("&larr;"), root_path, class: "btn btn-blue" %>

  <div class="header">
    <h1>Add an old happy thing</h1>
  </div>

  <%= simple_form_for @old_happy_thing, url: happy_things_old_happy_thing_path do |f| %>
    <%= f.input :title, label: 'Title' %>
    <%= f.input :start_time,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
    <%= f.button :submit, 'Save', class: 'btn btn-blue mt-3' %>
  <% end %>
</div>
